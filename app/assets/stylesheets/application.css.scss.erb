.button {
  &.blue, & {
    $color: #CFC9A4; 
    $colorA: #b2e1ff;
    $colorB: #66b6fc;
    color: #FFFFFF !important;
    text-shadow: 0 1px 1px rgba(0,0,0,0.7);    
    font-family: 'Roboto Slab', Arial, Helvetica, sans-serif;
    border: 1px solid #66b6fc !important;
    @include background-gradient($colorA, $colorB);
    
    &:hover, &:focus {
      color: white !important;
      @include background-gradient(darken($colorA, 7%), darken($colorB,7%));
    }
  }
  &.red {
    $colorA: #eb0e07; 
    $colorB: #c00802; 
    color: #FFFFFF !important;
    text-shadow: 0 1px 1px rgba(0,0,0,0.7);    
    font-family: 'Roboto Slab', Arial, Helvetica, sans-serif;
    border: 1px solid #904513 !important;
    @include background-gradient($colorA, $colorB);
    
    &.nice {border: 1px solid darken($colorB,10%);}
    &:hover, &:focus {
      @include background-gradient(darken($colorA, 7%), darken($colorB,7%));
    }
  }
   &.facebook {
    $colorA: #0070b6; 
    $colorB: #034f91; 
    color: #FFFFFF !important;
    text-shadow: 0 1px 1px rgba(0,0,0,0.7);    
    font-family: 'Roboto Slab', Arial, Helvetica, sans-serif;
    border: 1px solid $colorB !important;
    @include background-gradient($colorA, $colorB);
    
    &.nice {border: 1px solid darken($colorB,10%);}
    &:hover, &:focus {
      @include background-gradient(darken($colorA, 7%), darken($colorB,7%));
    }
  }
  &.white {
    $colorA: #f9f9f9; 
    $colorB: #f2f2f2; 
    color: #333 !important;
    text-shadow: 0 1px 1px rgba(255,255,255,0.7);        
    font-family: 'Roboto Slab', Arial, Helvetica, sans-serif;
    border: 1px solid #CCC !important;
    @include background-gradient($colorA, $colorB);
    
    &.nice {border: 1px solid darken($colorB,10%);}
    &:hover, &:focus {
      @include background-gradient(darken($colorA, 7%), darken($colorB,7%));
    }
  }
  &.yellow {
    $colorA: #FCF18A; 
    $colorB: #f1da36; 
    color: #444 !important;
    text-shadow: 0 1px 1px rgba(255,255,255,0.7); 
    font-family: 'Roboto Slab', Arial, Helvetica, sans-serif;
    border: 1px solid darken($colorB,10%) !important;
    @include background-gradient($colorA, $colorB);
    
    &.nice {border: 1px solid darken($colorB,10%);}
    &:hover, &:focus {
      @include background-gradient(darken($colorA, 7%), darken($colorB,7%));
    }
  }
  &.full-width {width: 100%;}
}
