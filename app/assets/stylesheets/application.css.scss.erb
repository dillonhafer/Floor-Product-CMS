}

#side-nav {
  section {
    p {
      @include background-gradient(#f9f9f9, #f2f2f2);
      &.current-nav {@include background-gradient(#b2e1ff, #66b6fc);a{color:white;}}
      a:hover {
        color: #43a5fb;
      }
      width: 100% !important;
    }  
    width: 100% !important;
    .content {
      border-left: none;
      border-radius: 0 5px 5px 0;
    }
  }
  section:first-child {
    p {border-radius: 5px 5px 0 0}
  }
  section:last-child {
    p {border-radius: 0 0 5px 5px}
    .content {
      border-left: 1px solid #CCC;
      margin-left: -1px;
    }
  }

}

