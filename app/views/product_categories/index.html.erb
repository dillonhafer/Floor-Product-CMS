<h1>Product Categories</h1>

<hr />

<%= link_to 'New Product Category', new_product_category_path, class: 'blue button nice radius' %>

<table>
  <thead>
    <tr>
      <th>Name</th><th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @product_categories.all.each do |pc| %>
    <tr>
      <td><%= pc.name %> (<%= pluralize pc.product_families.count, 'product family' %>)</td><td><%= link_to 'edit', edit_product_category_path(pc), class: 'small yellow button radius' %> <%= link_to 'delete', product_category_path(pc), method: :delete, data: {confirm: 'Are you sure?'}, class: 'small red button nice radius' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
