<h1>Product Lengths</h1>

<hr />

<%= link_to 'New Product Length', new_product_length_path, class: 'blue button nice radius' %>

<table>
  <thead>
    <tr>
      <th>Name</th><th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @product_lengths.all.each do |pc| %>
    <tr>
      <td><%= pc.name %></td><td><%= link_to 'edit', edit_product_length_path(pc), class: 'small button radius' %> <%= link_to 'delete', product_length_path(pc), method: :delete, data: {confirm: 'Are you sure?'}, class: 'small red button nice radius' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
