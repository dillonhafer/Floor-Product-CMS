<h3 class="subheader">Product Thicknesses</h3>

<hr />

<%= link_to 'New Product Thickness', new_product_thickness_path, class: 'blue button nice radius' %>

<table>
  <thead>
    <tr>
      <th>Name</th><th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @product_thicknesses.all.each do |pc| %>
    <tr>
      <td><%= pc.name %></td><td><%= link_to 'edit', edit_product_thickness_path(pc), class: 'small yellow button radius' %> <%= link_to 'delete', product_thickness_path(pc), method: :delete, data: {confirm: 'Are you sure?'}, class: 'small red button nice radius' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
