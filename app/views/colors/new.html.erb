<h3>Create a color for <%= @color.color_palette.name %></h3>
<hr />

<%= form_for @color do |f| %>
  <%= f.error_messages %>  
  <br />
  <%= f.label :color_palette_id, "Color Palette" %>
  <%= f.collection_select :color_palette_id, @color_palettes, :id, :name %>
  <br />
  <br />
  <%= f.text_field :color_number, placeholder: "Color Number (00)" %>
  <%= f.text_field :name, placeholder: "Name (Navy Blue)" %>
  <%= f.label :color_family_id, "Color Family" %>
  <%= f.collection_select :color_family_id, @color_families, :id, :name %>
  <%= f.text_field :hex, placeholder: "Hex Value (7DB9E8)" %>
  <label>
    <%= f.check_box :selects %> Selects Palette Color?
  </label>
  <br />
  <%= f.submit "Create Color", class: 'success button nice radius' %> <%= link_to "Cancel", color_palettes_path, class: 'red button nice radius' %>
<% end %>