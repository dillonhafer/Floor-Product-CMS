<h3>Update: <span class='label'><%= @collection.name %></span></h3>
<hr />
<%= form_for @collection do |f| %>
  <%= f.error_messages %>
  <%= f.text_field :name, placeholder: "Collection Name" %>
  <%= f.text_field :material, placeholder: "Material Name (Rubber)" %>
  <%= f.text_area :collection_description, placeholder: "Type description here." %>

  <ul id="spec-image-list" class="large-block-grid-5">
    <li>
      <label>
        <%= f.check_box :icon_1 %>
        <%= image_tag "wallbase/Icon_BIAQ.png" %>
      </label>
    </li>
    <li>
      <label>
        <%= f.check_box :icon_2 %>
        <%= image_tag "wallbase/icon_floorscore.png" %>
      </label>
    </li>
    <li>
      <label>
        <%= f.check_box :icon_3 %>
        <%= image_tag "wallbase/icon_NSF.png" %>
       </label>
    </li>
    <li>
      <label>
        <%= f.check_box :icon_4 %>
        <%= image_tag "wallbase/icon_phthalateFree.png" %>
       </label>
    </li>
    <li>
      <label>
        <%= f.check_box :icon_5 %>
        <%= image_tag "wallbase/icon_phthalateHalogen.png" %>
       </label>
    </li>
  </ul>
  <hr />
  <%= link_to_add_fields "Add Section", f, :collection_sections, class: 'small success button' %>
  
  <div class="row">
    <div class="large-12 columns">      
       <%= f.fields_for :collection_sections do |builder| %>
         <%= render 'collection_section_fields', f: builder %>
       <% end %>
    </div>
  </div>

  <%= f.submit "Update Collection", class: 'small button' %> <%= link_to "Cancel", wallbase_collection_path(@collection), class: 'small alert button' %>
<% end %>